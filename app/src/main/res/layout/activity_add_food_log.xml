<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/selected_input_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/select_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pick_date"
        android:onClick="showDatePickerDialog"
        android:layout_below="@+id/selected_input_date"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38dp"
        android:layout_marginTop="5dp"
        android:hint="@string/SearchFood"
        android:layout_below="@+id/select_date"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/quantity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:layout_marginTop="5dp"
        android:hint="@string/SearchQuantity"
        android:layout_below="@+id/search_text"
        android:layout_margin="26dp"/>

    <EditText
        android:id="@+id/measure_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:layout_marginTop="10dp"
        android:hint="@string/SearchMeasure"
        android:layout_below="@+id/search_text"
        android:layout_toRightOf="@+id/quantity_text"
        android:layout_margin="26dp"/>


    <Button
        android:id="@+id/selected_breakfast_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BreakfastSelection"
        android:onClick=""
        android:background="@drawable/meal_selection_button"
        android:layout_below="@+id/measure_text"
        android:layout_marginLeft="90dp"/>

    <Button
        android:id="@+id/selected_lunch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LunchSelection"
        android:onClick=""
        android:background="@drawable/meal_selection_button"
        android:layout_toRightOf="@+id/selected_breakfast_button"
        android:layout_below="@+id/measure_text"
        android:layout_marginRight="90dp"/>

    <Button
        android:id="@+id/selected_dinner_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DinnerSelection"
        android:onClick=""
        android:background="@drawable/meal_selection_button"
        android:layout_below="@+id/selected_breakfast_button"
        android:layout_marginLeft="90dp"/>

    <Button
        android:id="@+id/selected_snack_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snack"
        android:onClick=""
        android:background="@drawable/meal_selection_button"
        android:layout_toRightOf="@+id/selected_dinner_button"
        android:layout_below="@+id/selected_lunch_button"
        android:layout_marginRight="90dp"/>

    <Button
        android:id="@+id/save_button"
        android:text="SAVE"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selected_dinner_button"
        android:layout_centerHorizontal="true"/>

