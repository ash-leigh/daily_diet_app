<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily analysis"
        android:textSize="20dp"
        android:textColor="@color/darkGreen"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/select_date_to_analyse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select date"
        android:onClick="showDatePickerDialog"
        android:layout_gravity="center"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:shrinkColumns="*"
        >

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <TextView
            android:text="Calories"
            android:textSize="16dp"
            android:textColor="@color/darkGreen"
            android:id="@+id/calories_analysis_table_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/table_cell_bg"
            android:layout_margin="1dp"
            android:padding="5dp"
            />
        <TextView
            android:text="Fat"
            android:textSize="16dp"
            android:textColor="@color/darkGreen"
            android:id="@+id/fat_analysis_table_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/table_cell_bg"
            android:layout_margin="1dp"
            android:padding="5dp"
            />
    </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <TextView
                android:textSize="16dp"
                android:textColor="@color/darkGreen"
                android:id="@+id/calories_remaining_table_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:background="@drawable/table_cell_bg"
                android:layout_margin="1dp"
                android:padding="5dp"
                />
            <TextView
                android:textSize="16dp"
                android:textColor="@color/darkGreen"
                android:id="@+id/fat_remaining_table_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:background="@drawable/table_cell_bg"
                android:layout_margin="1dp"
                android:padding="5dp"
                />
        </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <lecho.lib.hellocharts.view.PieChartView
            android:id="@+id/cal_chart"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:visibility="invisible"
            android:background="@drawable/table_cell_bg"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:padding="5dp"

            />
        <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/fat_chart"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:visibility="invisible"
        android:background="@drawable/table_cell_bg"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:padding="5dp"

        />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Saturated Fat"
            android:textSize="16dp"
            android:textColor="@color/darkGreen"
            android:id="@+id/satFat_analysis_table_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/table_cell_bg"
            android:layout_margin="1dp"
            android:padding="5dp"
            />
        <TextView
            android:text="Carbohydrates"
            android:textSize="16dp"
            android:textColor="@color/darkGreen"
            android:id="@+id/carbs_analysis_table_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/table_cell_bg"
            android:layout_margin="1dp"
            android:padding="5dp"
            />
    </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <TextView
                android:textSize="16dp"
                android:textColor="@color/darkGreen"
                android:id="@+id/satFat_remaining_table_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:background="@drawable/table_cell_bg"
                android:layout_margin="1dp"
                android:padding="5dp"
                />
            <TextView
                android:textSize="16dp"
                android:textColor="@color/darkGreen"
                android:id="@+id/carbs_remaining_table_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:background="@drawable/table_cell_bg"
                android:layout_margin="1dp"
                android:padding="5dp"
                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <lecho.lib.hellocharts.view.PieChartView
                android:id="@+id/satFat_chart"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:visibility="invisible"
                android:background="@drawable/table_cell_bg"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:padding="5dp"/>

            <lecho.lib.hellocharts.view.PieChartView
                android:id="@+id/carb_chart"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:visibility="invisible"
                android:background="@drawable/table_cell_bg"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:padding="5dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Sugar"
                android:textSize="16dp"
                android:textColor="@color/darkGreen"
                android:id="@+id/sugar_analysis_table_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:background="@drawable/table_cell_bg"
                android:layout_margin="1dp"
                android:padding="5dp"
                />
            <TextView
                android:text="Protein"
                android:textSize="16dp"
                android:textColor="@color/darkGreen"
                android:id="@+id/pro_analysis_table_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:background="@drawable/table_cell_bg"
                android:layout_margin="1dp"
                android:padding="5dp"
                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <TextView
                android:textSize="16dp"
                android:textColor="@color/darkGreen"
                android:id="@+id/sugar_remaining_table_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:background="@drawable/table_cell_bg"
                android:layout_margin="1dp"
                android:padding="5dp"
                />
            <TextView
                android:textSize="16dp"
                android:textColor="@color/darkGreen"
                android:id="@+id/pro_remaining_table_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:background="@drawable/table_cell_bg"
                android:layout_margin="1dp"
                android:padding="5dp"
                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <lecho.lib.hellocharts.view.PieChartView
                android:id="@+id/sugar_chart"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:visibility="invisible"
                android:background="@drawable/table_cell_bg"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:padding="5dp"/>

            <lecho.lib.hellocharts.view.PieChartView
                android:id="@+id/pro_chart"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:visibility="invisible"
                android:background="@drawable/table_cell_bg"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:padding="5dp"/>
        </TableRow>
    </TableLayout>

</LinearLayout>
</ScrollView>